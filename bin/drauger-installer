#  but WITHOUT ANY WARRANTY; without even the implied warranty of
#  MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.  See the
#  GNU General Public License for more details.
#  
#  You should have received a copy of the GNU General Public License
#  along with this program; if not, write to the Free Software
#  Foundation, Inc., 51 Franklin Street, Fifth Floor, Boston,
#  MA 02110-1301, USA.
#
version="0.3.3"
if [ "$1" == "--version" ]; then
	/bin/echo -e "\ndrauger-installer version $version\n"
	exit 0
fi
if [ "$1" == "--help" ] || [ "$1" == "-h" ]; then
	/bin/echo -e "\nJust run drauger-installer-gtk to get a GUI installer for a *.deb package.\nOr, pass drauger-installer the file path to install via a CLI.\n"
	exit 0
fi
if $(/bin/echo "$1" | /bin/grep -q '.deb') && $(/bin/echo "$1" | /bin/grep -q '/'); then
	pak=$(/usr/bin/dpkg-deb -f $1 Package)
	ver=$(/usr/bin/dpkg-deb -f $1 Version)
	if [ "$(/usr/bin/dpkg -s $pak 2>/dev/null | /bin/grep 'Version: ' | /bin/sed 's/Version: //g')" == "$ver" ]; then
		/bin/echo "This version of $pak is already installed."
		/etc/drauger-installer/log-out.sh 1 /bin/drauger-installer "/bin/drauger-installer detected provided *.deb package was already installed."
		exit 1
	fi
	des=$(/usr/bin/dpkg-deb -f "$1" Description)
	dep=$(/usr/bin/dpkg-deb -f "$1" Depends)
	brk=$(/usr/bin/dpkg-deb -f "$1" Breaks)
	#filter out already installed deps
	deplist=$(/bin/echo "$dep" | /bin/sed 's/([^)(]*)//g' | /bin/sed 's/\,//g')
	brklist=$(/bin/echo "$brk" | /bin/sed 's/([^)(]*)//g' | /bin/sed 's/\,//g')
	instlist=$(/usr/bin/dpkg -l | /bin/grep '^ii' | /usr/bin/awk '{print $2}')
	for each1 in $deplist; do
		if $(/bin/echo "$instlist" | /bin/grep -q "$each1"); then
			deplist=$(/bin/echo "$deplist" | /bin/sed "s/$each //")
		fi
	done
	dep="$deplist"
	brklistsave=""
	for each1 in $brklist; do
		if $(/bin/echo "$instlist" | /bin/grep -q "$each1"); then
			brklistsave="$brklistsave $each1"
		fi
	done
	brk="$brklistsave"
	dep="$deplist"
	if [ "$brk" == "" ] || [ "$brk" == " " ] || [ "$brklist" == "" ] || [ "$brklist" == " " ]; then
		brk="None"
	else
		brk=$(/bin/echo "$brk" | sed 's/ /, /g')
	fi
	if [ "$dep" == "" ] || [ "$dep" == " " ] || [ "$deplist" == "" ] || [ "$deplist" == " " ]; then
		dep="None"
	else
		dep=$(/bin/echo "$dep" | sed 's/ /, /g')
	fi
	info="Package: $pak

Version: $ver

Needed Dependencies: $dep

Conflicts: $brk

Description: $des

"
	if $(/usr/bin/dpkg -l "$pak" 2>/dev/null | /bin/grep -q "$pak"); then
		action="update"
		actioned="updated"
	else
		action="install"
		actioned="installed"
	fi
	info=$(/bin/echo "$info" | awk '{gsub(/.{125}/,"&\n")}1')
	read -p "
$info

Would you like to $action this package? [y/N]: " ans
	if [ "$ans" == "y" ] || [ "$ans" == "Y" ]; then
		{ 
			/usr/bin/sudo /usr/bin/apt -y install "$1" && /bin/echo -e "\n$pak has been $actioned\n"
		} && {
			exit 0
		} || {
			/etc/drauger-installer/log-out.sh 2 /bin/drauger-installer "Installation of provided *.deb package $1 failed."
			exit 2
		}
	else
		/etc/drauger-installer/log-out.sh 1 /bin/drauger-installer "Installation Canceled"
		exit 1
	fi
elif $(/bin/echo "$1" | /bin/grep -q '.deb'); then
	pak=$(/usr/bin/dpkg-deb -f "$1" Package)
	ver=$(/usr/bin/dpkg-deb -f "$1" Version)
	if [ "$(/usr/bin/dpkg -s $pak 2>/dev/null | /bin/grep 'Version: ' | /bin/sed 's/Version: //g')" == "$ver" ]; then
		/bin/echo "This version of $pak is already installed."
		/etc/drauger-installer/log-out.sh 1 /bin/drauger-installer "/bin/drauger-installer detected provided *.deb package was already installed."
		exit 1
	fi
	des=$(/usr/bin/dpkg-deb -f "$1" Description)
	dep=$(/usr/bin/dpkg-deb -f "$1" Depends)
	brk=$(/usr/bin/dpkg-deb -f "$1" Breaks)
	#filter out already installed deps
	deplist=$(/bin/echo "$dep" | /bin/sed 's/([^)(]*)//g' | /bin/sed 's/\,//g')
	brklist=$(/bin/echo "$brk" | /bin/sed 's/([^)(]*)//g' | /bin/sed 's/\,//g')
	instlist=$(/usr/bin/dpkg -l | /bin/grep '^ii' | /usr/bin/awk '{print $2}')
	for each1 in $deplist; do
		if $(/bin/echo "$instlist" | /bin/grep -q "$each1"); then
			deplist=$(/bin/echo "$deplist" | /bin/sed "s/$each //")
		fi
	done
	dep="$deplist"
	brklistsave=""
	for each1 in $brklist; do
		if $(/bin/echo "$instlist" | /bin/grep -q "$each1"); then
			brklistsave="$brklistsave $each1"
		fi
	done
	brk="$brklistsave"
	if [ "$brk" == "" ] || [ "$brk" == " " ] || [ "$brklist" == "" ] || [ "$brklist" == " " ]; then
		brk="None"
	else
		brk=$(/bin/echo "$brk" | sed 's/ /, /g')
	fi
	if [ "$dep" == "" ] || [ "$dep" == " " ] || [ "$deplist" == "" ] || [ "$deplist" == " " ]; then
		dep="None"
	else
		dep=$(/bin/echo "$dep" | sed 's/ /, /g')
	fi
	info="Package: $pak

Version: $ver

Needed Dependencies: $dep

Conflicts: $brk

Description: $des

"
	if $(/usr/bin/dpkg -l "$pak" 2>/dev/null | /bin/grep -q "$pak"); then
		action="update"
		actioned="updated"
	else
		action="install"
		actioned="installed"
	fi
	info=$(/bin/echo "$info" | awk '{gsub(/.{125}/,"&\n")}1')
	read -p "
$info

Would you like to $action this package? [y/N]: " ans
	if [ "$ans" == "y" ] || [ "$ans" == "Y" ]; then
		{ 
			/usr/bin/sudo /usr/bin/apt -y install ./"$1" && /bin/echo -e "\n$pak has been $actioned\n"
		} && {
			exit 0
		} || {
			/etc/drauger-installer/log-out.sh 2 /bin/drauger-installer "Installation of provided *.deb package $1 failed."
			exit 2
		}
	else
		/etc/drauger-installer/log-out.sh 1 /bin/drauger-installer "Installation Canceled"
		exit 1
	fi
fi
