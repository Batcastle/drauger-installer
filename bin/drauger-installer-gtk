version="0.3.3"
if [ "$1" == "--version" ]; then
	/bin/echo -e "\ndrauger-installer-gtk version $version\n"
	exit 0
fi
if [ "$1" == "--help" ] || [ "$1" == "-h" ]; then
	/bin/echo -e "\nJust run drauger-installer-gtk to get a GUI installer for a *.deb package.\nor, pass drauger-installer the file path to install via a CLI.\n"
	exit 0
fi
install="$1"
if [ "$install" == "" ] || [ "$install" == " " ] || [ -z ${install+x} ]; then
	install=$(/usr/bin/python3 /etc/drauger-installer/splash.py 2>/dev/null)
	if [ -z "$install" ]; then
		/etc/drauger-installer/log-out.sh 2 /bin/drauger-installer-gtk "/etc/drauger-installer/splash.py exited with nothing on stdout. Most likly killed with no selection."
		exit 2
	fi
fi
if [ "$?" == "1" ]; then
	exit 1
else
	
	pak=$(/usr/bin/dpkg-deb -f "$install" Package)
	ver=$(/usr/bin/dpkg-deb -f "$install" Version)
	if [ "$(/usr/bin/dpkg -s "$pak" | /bin/grep 'Version: ' | /bin/sed 's/Version: //g')" == "$ver" ]; then
		/usr/bin/python3 /etc/drauger-installer/error_ver.py "$pak"
		exit 1
	fi
	des=$(/usr/bin/dpkg-deb -f "$install" Description)
	des=$(/bin/echo "$des" | /usr/bin/awk '{gsub(/\n/,"&\t")}1')
	dep=$(/usr/bin/dpkg-deb -f "$install" Depends)
	brk=$(/usr/bin/dpkg-deb -f "$install" Breaks)
	#filter out already installed deps
	deplist=$(/bin/echo "$dep" | /bin/sed 's/([^)(]*)//g' | /bin/sed 's/\,//g')
	brklist=$(/bin/echo "$brk" | /bin/sed 's/([^)(]*)//g' | /bin/sed 's/\,//g')
	instlist=$(/usr/bin/dpkg -l | /bin/grep '^ii' | /usr/bin/awk '{print $2}')
	for each1 in $deplist; do
		if $(/bin/echo "$instlist" | /bin/grep -q "$each1"); then
			deplist=$(/bin/echo "$deplist" | /bin/sed "s/$each //")
		fi
	done
	dep="$deplist"
	brklistsave=""
	for each1 in $brklist; do
		if $(/bin/echo "$instlist" | /bin/grep -q "$each1"); then
			brklistsave="$brklistsave $each1"
		fi
	done
	brk="$brklistsave"
	dep="$deplist"
	if [ "$brk" == "" ] || [ "$brk" == " " ] || [ "$brklist" == "" ] || [ "$brklist" == " " ]; then
		brk="None"
	else
		brk=$(/bin/echo "$brk" | sed 's/ /, /g')
	fi
	if [ "$dep" == "" ] || [ "$dep" == " " ] || [ "$deplist" == "" ] || [ "$deplist" == " " ]; then
		dep="None"
	else
		dep=$(/bin/echo "$dep" | sed 's/ /, /g')
	fi
	info="Package: $pak 

	Version: $ver

	Needed Dependencies: $dep

	Conflicts: $brk

	Description: $des"
fi
if $(/usr/bin/dpkg -l "$pak" 2>/dev/null| /bin/grep -q "$pak"); then
	action="update"
	actioned="updated"
	actioning="Updating"
else
	action="install"
	actioned="installed"
	actioning="Installing"
fi
info=$(/bin/echo "$info" | /usr/bin/awk '{gsub(/.{125}/,"& \t \n \t")}1')
/usr/bin/python3 /etc/drauger-installer/confirm.py "$info" "$action"
x="$?"
if [ "$x" == "0" ]; then
	( /usr/bin/pkexec /usr/bin/apt -y install "$install" | /usr/bin/zenity --progress --pulsate --auto-close --no-cancel --text="$actioning $pak . . ." && notify-send "$pak has been $actioned" ) || /usr/bin/python3 /etc/drauger-installer/error_inst.py "$actioning" "$?"
else
	/etc/drauger-installer/log-out.sh 1 /bin/drauger-installer-gtk "/etc/drauger-installer/confirm.py exited with non-zero value. Most likly installation canceled."
	exit 1
fi
