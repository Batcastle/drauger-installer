version="0.1.9"
if [ "$1" == "--version" ]; then
	echo -e "\ndrauger-installer-gtk version $version\n"
	exit 0
fi
if [ "$1" == "--help" ] || [ "$1" == "-h" ]; then
	echo -e "\nJust run drauger-installer-gtk to get a GUI installer for a *.deb package.\nOr, pass drauger-installer the file path to install via a CLI.\n"
	exit 0
fi
install="$1"
if [ "$install" == "" ] || [ "$install" == " " ] || [ -z ${install+x} ] ; then
	zenity --info --text="Welcome to Drauger Installer! In the following screen, please navigate to the *.deb file you wish to install, select it, then hit \"Ok\"" --no-wrap
	install=$(zenity --file-selection --file-filter=*.deb)
fi
if [ "$?" == "1" ]; then
	exit 1
else
	
	pak=$(dpkg-deb -f $install Package)
	ver=$(dpkg-deb -f $install Version)
	if [ "$(dpkg -s "$pak" | grep 'Version: ' | sed 's/Version: //g')" == "$ver" ]; then
		zenity --error --no-wrap --text="This version of $pak is already installed."
		exit 1
	fi
	des=$(dpkg-deb -f $install Description)
	dep=$(dpkg-deb -f $install Depends)
	info="Package: $pak 

Version: $ver

Depends: $dep

Description: $des"
fi
if $(dpkg -l "$pak" | grep -q "$pak"); then
	action="update"
	actioned="updated"
	actioning="Updating"
else
	action="install"
	actioned="installed"
	actioning="Installing"
fi
info=$(echo "$info" | awk '{gsub(/.{125}/,"&\n")}1')
zenity --question --icon-name=install --no-wrap --text="Package Info:\n\n$info\n\nWould you like to $action this package?"
x="$?"
if [ "$x" == "0" ]; then
	( pkexec apt -y install "$install" | zenity --progress --pulsate --auto-close --no-cancel --text="$actioning $pak . . ." && notify-send "$pak has been $actioned" ) || zenity --error --no-wrap --text="An error was encountered $actioning your app. Error code $? was thrown from apt."
else
	exit 1
fi